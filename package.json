{
  "name": "lexicon-transformer",
  "version": "1.0.0",
  "description": "A project to transform current lexicon files from the old format to the new format.",
  "main": "src/transform.ts",
  "scripts": {
    "convert-sdbg": "ts-node src/convert-marble-lexicon.ts --dictionary-type SDBG --input ../marble-lexicon/SDBG --domains ../marble-lexicon/SDBG --marble-links ../marble-indexes/Full --output output-sdbg --version $(cd ../marble-lexicon && git log -1 --format=%cd --date=iso-strict)",
    "convert-sdbh": "ts-node src/convert-marble-lexicon.ts --dictionary-type SDBH --input ../marble-lexicon/SDBH --domains ../marble-lexicon/SDBH --marble-links ../marble-indexes/Full --output output-sdbh --version $(cd ../marble-lexicon && git log -1 --format=%cd --date=iso-strict)",
    "import-to-sqlite": "ts-node src/import-lexicon-to-sqlite.ts --input output-sdbg output-sdbh --output lexicon.db",
    "import-sdbg-to-sqlite": "ts-node src/import-lexicon-to-sqlite.ts --input output-sdbg --output lexicon-sdbg.db",
    "import-sdbh-to-sqlite": "ts-node src/import-lexicon-to-sqlite.ts --input output-sdbh --output lexicon-sdbh.db",
    "import-english-to-sqlite": "ts-node src/import-lexicon-to-sqlite.ts --input english --output english.db",
    "format-sql": "prettier --plugin=prettier-plugin-sql --write \"sql/**/*.sql\"",
    "lint": "eslint src/*.ts",
    "test": "jest"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "commander": "^11.1.0",
    "fs-extra": "^10.0.0",
    "sqlite": "^5.0.1",
    "sqlite3": "^5.1.6",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/sqlite3": "^3.1.11",
    "@types/xmldom": "^0.1.34",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-erb": "^4.1.0",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-no-type-assertion": "^1.3.0",
    "eslint-plugin-promise": "^6.6.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-plugin-sql": "^0.19.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "author": "",
  "license": "ISC"
}
